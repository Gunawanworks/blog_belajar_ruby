<% content_for :page_title , 'Index' %>
<% content_for :page_angka , '2' %>

<section class="section">
    <div class="container">

        <% @posts.each do |post| %>

        <div class="card">  
            <div class="card-content">
                <div class="media">
                
                    <div class="medic-content">
                        <p class='title is-4'><%= post.title %></p> 
                    </div>

                </div>
                <div class="content">
                    <%= post.content %>
                </div>      
            </div>
        </div>

        <% end %>
    </div>
</section>